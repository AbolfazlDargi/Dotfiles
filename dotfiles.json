{
  "name": "Felipe Juan Dotfiles (GNOME setup)",
  "description": "Dotfiles adapted for GNOME on Ubuntu, including Zsh, Kitty, and Neovim",
  "dotfiles": [
    {
      "source": "config/kitty/kitty.conf",
      "target": "~/.config/kitty/kitty.conf"
    },
    {
      "source": "config/nvim/init.vim",
      "target": "~/.config/nvim/init.vim"
    },
    {
      "source": ".zshrc",
      "target": "~/.zshrc"
    }
  ],
  "packages": [
    {
      "name": "zsh",
      "install": "sudo apt install -y zsh"
    },
    {
      "name": "kitty",
      "install": "sudo apt install -y kitty"
    },
    {
      "name": "neovim",
      "install": "sudo apt install -y neovim"
    }
  ]
}
